{
  "defaults": {
    "github": {
      "owner": "ShunsukeHayashi",
      "repo": "omakase-ai"
    }
  },
  "mcpServers": {
    "ide-integration": {
      "command": "node",
      "args": [
        ".claude/mcp-servers/ide-integration.js"
      ],
      "disabled": false,
      "description": "VS Code diagnostics and Jupyter execution integration"
    },
    "github-enhanced": {
      "command": "node",
      "args": [
        ".claude/mcp-servers/github-enhanced.js"
      ],
      "env": {
        "GITHUB_TOKEN": "${GITHUB_TOKEN}",
        "GITHUB_OWNER": "ShunsukeHayashi",
        "GITHUB_REPO": "omakase-ai"
      },
      "disabled": false,
      "description": "Enhanced GitHub operations for Issue/PR management"
    },
    "project-context": {
      "command": "node",
      "args": [
        ".claude/mcp-servers/project-context.js"
      ],
      "disabled": false,
      "description": "Project-specific context and dependency information"
    },
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "."
      ],
      "disabled": false,
      "description": "Filesystem access for project files"
    },
    "context-engineering": {
      "command": "node",
      "args": [
        "external/context-engineering-mcp/mcp-server/index.js"
      ],
      "env": {
        "AI_GUIDES_API_URL": "http://localhost:8888"
      },
      "disabled": false,
      "description": "Context Engineering - AI-powered context analysis, optimization, and semantic search"
    },
    "miyabi": {
      "command": "node",
      "args": [
        ".claude/mcp-servers/miyabi-integration.js"
      ],
      "disabled": false,
      "description": "Miyabi CLI統合 - プロジェクト作成、Agent実行、自動化機能"
    },
    "dev3000": {
      "command": "npx",
      "args": [
        "-y",
        "dev3000",
        "--mcp"
      ],
      "disabled": false,
      "description": "dev3000 - UI/UX統合デバッグツール (サーバー・ブラウザ・ネットワーク統合ロギング、83%デバッグ時間削減)"
    },
    "gemini-image-gen": {
      "command": "node",
      "args": [
        ".claude/mcp-servers/gemini-image-gen/index.js"
      ],
      "env": {
        "GEMINI_API_KEY": "${GEMINI_API_KEY}",
        "GEMINI_OUTPUT_DIR": "${GEMINI_OUTPUT_DIR}"
      },
      "disabled": false,
      "description": "Gemini Image Generation - AI画像生成・編集ツール (generate_image, edit_image, describe_image)"
    },
    "tradingview-webhook": {
      "command": "node",
      "args": [
        ".claude/mcp-servers/tradingview-webhook.js"
      ],
      "disabled": false,
      "description": "TradingView Webhook受信サーバー - アラート受信・分析・miyabi-investment-society連携"
    }
  }
}
